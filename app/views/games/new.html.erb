<ul>
<%@grid.each do |letter|%>
<li class="in-line"><%=letter%></li>
  <%end%>
</ul>

<form action="/score" class="attempt">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @grid %>
  <label for="attempt">What's the longest word you can make?</label>
  <input type="text" name="attempt">
  <input type="submit" value="Answer!">
</form>
